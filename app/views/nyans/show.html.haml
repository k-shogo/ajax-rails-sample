- model_class = Nyan
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @nyan._id
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @nyan.title

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), nyans_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_nyan_path(@nyan), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), nyan_path(@nyan), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
